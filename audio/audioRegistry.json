{
  "paths": {
    "phonics": "audio/phonics/",
    "games": "audio/games/",
    "words": "audio/words/",
    "feedback": "audio/"
  },
  "feedback": {
    "correct": {
      "file": "bravo.mp3",
      "text": "Браво!"
    },
    "incorrect": {
      "file": "try-again.mp3",
      "text": "Опитай пак!"
    }
  },
  "phonics": {
    "instructions": {
      "description": "Letter sound instruction prompts (find-*.mp3)",
      "pattern": "find-{letter}.mp3",
      "letters": ["a", "b", "v", "g", "d", "e", "zh", "z", "i", "y", "k", "l", "m", "n", "o", "p", "r", "s", "t", "u", "f", "h", "ts", "ch", "sh", "sht", "yu", "ya"]
    },
    "confirmCorrect": {
      "description": "Confirmation that word starts with letter (zapochva-*.mp3)",
      "pattern": "zapochva-{letter}.mp3"
    },
    "confirmIncorrect": {
      "description": "Confirmation that word doesn't start with letter (ne-zapochva-*.mp3)",
      "pattern": "ne-zapochva-{letter}.mp3"
    }
  },
  "games": {
    "letters": {
      "description": "Individual letter pronunciations (letter_*.mp3)",
      "pattern": "letter_{letter}.mp3"
    },
    "syllables": {
      "description": "Syllable pronunciations (syl_*.mp3)",
      "pattern": "syl_{syllable}.mp3"
    },
    "words": {
      "description": "Word pronunciations for games (word_*.mp3)",
      "pattern": "word_{word}.mp3"
    },
    "titles": {
      "description": "Game titles (game_game*.mp3)",
      "pattern": "game_game{gameId}.mp3"
    },
    "instructions": {
      "description": "Game instructions (game_game*instr.mp3)",
      "pattern": "game_game{gameId}instr.mp3"
    },
    "phrases": {
      "description": "Common instructional phrases (phrase_*.mp3)",
      "items": {
        "vowel": "phrase_glasna.mp3",
        "consonant": "phrase_saglasna.mp3",
        "buildWord": "phrase_postroydumata.mp3",
        "collectWord": "phrase_saberidumata.mp3",
        "sortLetters": "phrase_sortiray.mp3",
        "connectHalves": "phrase_svarzhi.mp3"
      }
    }
  },
  "transliteration": {
    "description": "Bulgarian to Latin letter mapping for filename generation",
    "map": {
      "а": "a", "б": "b", "в": "v", "г": "g", "д": "d", "е": "e", "ж": "zh",
      "з": "z", "и": "i", "й": "y", "к": "k", "л": "l", "м": "m", "н": "n",
      "о": "o", "п": "p", "р": "r", "с": "s", "т": "t", "у": "u", "ф": "f",
      "х": "h", "ц": "ts", "ч": "ch", "ш": "sh", "щ": "sht", "ъ": "a", "ь": "y",
      "ю": "yu", "я": "ya"
    }
  }
